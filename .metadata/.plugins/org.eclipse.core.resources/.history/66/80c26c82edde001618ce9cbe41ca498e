#!/usr/bin/env python
#coding:UTF-8

import pymysql

class MySqlHelper(object):
    
    def __init__(self):
        pass
    
    def insert(self,*args):
        db = pymysql.connect(host='127.0.0.1',user='root',password='root',database='ebank')
        cursor = db.cursor()
        cursor.executemany(*args)
        db.commit()
        cursor.close()
        db.close()
        
    def select(self,*args):
        db = pymysql.connect(host='127.0.0.1',user='root',password='root',database='ebank')
        cursor = db.cursor()
        cursor.execute(*args)
        data = cursor.fetchall()
        cursor.close()
        db.close()
        return data




handle = MySqlHelper()
sql = 'select %s from test where id = %s'
params = ('*', 2)

print(handle.select(sql))



       
        