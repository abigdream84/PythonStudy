#!/usr/bin/env python3.5
#coding:UTF-8

import socket

import platform
print(platform.python_version())


ip_addr = ('127.0.0.1',9999)

sk = socket.socket()

sk.bind(ip_addr)
sk.listen(5)
while True:
    conn, addr = sk.accept()
    mess = 'hello'
    conn.send(mess.encode(encoding='utf_8'))
    flag = True
    while flag:
        data = conn.recv(1024)
        print(data)
        print(type(data))
        if data == 'exit':
            flag = False
        elif data == '0':
            mess = 'ffffff'
            conn.send(mess.encode(encoding='utf_8'))
        else:
            mess = 'tttttt'
            conn.send(mess.encode(encoding='utf_8'))
    
    conn.close()



