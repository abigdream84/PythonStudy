#!/usr/bin/env python
#coding:UTF-8

from ebank.ui.ui import ui
from ebank.model.account import account
from ebank.model.balance import balance

def login():
    while True:
        ui_handle = ui()
        account_handle = account()
        ui_handle.welcome()
        user = ui_handle.login()
        user_id = user[0]
        user_pwd = user[1]

        if not account_handle.chkUser(user_id):
            break
        elif not account_handle.chkPwd(user_id, user_pwd):
            break
        else:
            return user_id

def query(user_id):
    balance_handle = balance()
    user_balance = balance_handle.query(user_id)
    print("Your balance is:"+srt(user_balance))



def main():
    ui_handle = ui()
    while True:
        user_id = login()
        if not user_id:
            continue
        else:
            ser_id = ui_handle.serviceList()
            break
    
    if ser_id == '2':
        query(user_id)
    
    
    
    
#    ser_id = login()
#    if ser_id == '2':
#        query(user_id)
    
    
    
            

if __name__ == '__main__':
    main()








