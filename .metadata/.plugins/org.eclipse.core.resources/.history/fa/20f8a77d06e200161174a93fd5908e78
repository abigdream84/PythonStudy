#!/usr/bin/env python
#coding:UTF-8

import socket

ip_addr = ('127.0.0.1,9998')

sk = socket.socket()
sk.bind(ip_addr)
sk.listen(5)

while True:
    conn, addr = sk.accept()
    data = 'hello'
    data_b = data.encode(encoding='utf_8')
    conn.send(data_b)
    
    flag = True
    while flag:    
        mess = conn.recv(1024)
        mess_s = mess.decode('ascii')
        print(mess_s)
        if mess_s == '0':
            mess = 'hahahaha'
            mess_b = mess.encode(encoding='utf_8')
            conn.send(mess_b)
        elif mess_s == 'exit':
            break
        else:
            mess = 'sb'
            mess_b = mess.encode(encoding='utf_8')
            conn.send(mess_b)
    conn.close()










