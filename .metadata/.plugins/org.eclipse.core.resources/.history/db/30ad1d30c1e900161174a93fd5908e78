#!/usr/bin/env python
#coding:UTF-8


import socketserver
import os

class MyFtpServer(socketserver.BaseRequestHandler):
    
    def handle(self):
        base_path = '/tmp'
        conn = self.request
        print("Connected...")
        while True:
            pre_data = conn.recv(1024)
            cmd,file_name,file_size = conn.split('|')
            recv_size= 0
            file_dir = os.path.join(base_path,file_name)
            f = open(file_dir,'wb')
            Flag = True
            while Flag:
                if int(file_size) > recv_size:
                    data = conn.recv(1024)
                    f.write(data)
                    recv_size += len(data)
                
                else:
                    recv_size = 0
                    Flag = False
                    continue
        f.close()
        print('Upload successed!')
        

instance = socketserver.ThreadingTCPServer(('127.0.0.1',9990),MyFtpServer)
instance.serve_forever()
              
                



